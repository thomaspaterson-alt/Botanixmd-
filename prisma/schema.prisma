generator client { provider = "prisma-client-js" }
datasource db { provider = "sqlite"; url = env("DATABASE_URL") }

model Product {
  id          String   @id @default(cuid())
  slug        String   @unique
  name        String
  description String
  benefit     String
  priceCents  Int
  imageUrl    String?
  subscriptionEligible Boolean @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Order {
  id            String   @id @default(cuid())
  email         String
  totalCents    Int
  stripeSession String   @unique
  createdAt     DateTime @default(now())
}

model Subscription {
  id           String   @id @default(cuid())
  email        String
  productSlug  String
  stripeSubId  String   @unique
  status       String
  interval     String   // month, 3_months, etc.
  createdAt    DateTime @default(now())
  canceledAt   DateTime?
}
